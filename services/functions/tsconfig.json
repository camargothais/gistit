{
  "compilerOptions": {
    "module": "commonjs",
    "typeRoots": ["src/@types"],
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "ES2017"
  },
  "compileOnSave": true,
  "include": ["src"]
}
